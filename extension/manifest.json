{
  "manifest_version": 3,
  "name": "Sprout Support Agent",
  "description": "L4 Support Engineering Assistant â€” EAB Metrics, Investigation Tools, and Process FAQs",
  "version": "1.0.0",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    },
    "default_title": "Open Sprout Support Agent"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "identity",
    "sidePanel"
  ],
  "host_permissions": [
    "https://*.atlassian.net/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.atlassian.net/*"],
      "js": ["content-script.js"],
      "css": ["content-style.css"]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
